@import 'nib'
tomorrow-current-line = #efefef
tomorrow-selection = #d6d6d6
tomorrow-foreground = #4d4d4c
tomorrow-comment = #8e908c
tomorrow-red = #c82829
tomorrow-orange = #f5871f
tomorrow-yellow = #eab700
tomorrow-green = #718c00
tomorrow-aqua = #3e999f
tomorrow-blue = #4271ae
tomorrow-purple = #8959a8
f-color-yellow = #FAF185
f-color-yellow-dk = #F6E76A
f-color-orange = #F5A623

monospace()
  font-family Menlo,Monaco,Consolas,"Courier New",monospace

body
  font-family Lato, 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

textarea
  &:focus
    outline none

input
  &:focus
    outline none

.f-header
  border-top 5px solid f-color-yellow
  padding 20px 0  
  .f-logo
    margin-left 5px

.f-cell
  position relative
  margin-bottom 20px
  padding 5px 0
  border 1px solid transparent
  .f-cell-type
    position absolute
    right 0
    top -15px
    text-transform uppercase
    font-size 9px
    background f-color-yellow
    padding 1px 3px
  .f-cell-input
    border-left 5px solid f-color-yellow-dk
    padding 0 10px
    textarea
      width 100%
      border none
      monospace()
  .f-cell-output
    padding 5px
  &.f-cell-selected
    border 1px solid f-color-orange
    .f-cell-input
      border-color f-color-orange
  &.f-cell-active
    border 1px solid tomorrow-green
    .f-cell-input
      border-color tomorrow-green
  &.f-cell-busy
    border 1px solid tomorrow-aqua
    .f-cell-input
      border-color tomorrow-aqua
  &.f-cell-error
    border 1px solid tomorrow-red
    .f-cell-input
      border-color tomorrow-red
  
// 
// Styles that apply only to html cells 
// 

.f-html
  h1, h2, h3, blockquote
    font-weight 300
  pre
    border none
    border-radius 0

.f-raw
  pre
    border none
    border-radius 0
    background inherit

